    span.navbar-toggler-icon

  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item
        a.nav-link(href='/') Login
      if isAuthenticated
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Menu
          .dropdown-menu
            //a.dropdown-item(href='/friends/addfriend') Add New Friend
            a.dropdown-item(href='/chats/new') Create Chat
            a.dropdown-item(href='/chats/index') Chat List
        li.nav-item
          form.nav-destroy(action=`/logout`, method="POST")
            input.destroy(type="submit", value="Logout")
      if !isAuthenticated
        li.nav-item
          a.nav-link(href='/authors/new') Register

